<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->

    <bean id="Specify" class="car.example.constructor.injection.Specification">
       <property name="make" value="Lamborghini"></property>
        <property name="model" value="Urus"></property>

    </bean>

    <bean id="MyCar" class="car.example.constructor.injection.Car">
        <constructor-arg ref="Specify"></constructor-arg>
    </bean>

</beans>